<div class = "my-content", id = "art-content", style = "text-align: center">
  <h2 class = "my-headTitle" style = "width = 100%;">
    <%= @piece.title %>
    <hr>
  </h2>
  <br>
  <p style="float: right; margin-right: 20px;"> <%= @piece.date %> </p>
  <img src = <%= @piece.photoLink %> style = "width: 60%; border: 5px solid white">
<br>
<div style= "width: 80%; margin-left: auto; margin-right:auto">

    <h1>
      Description:
    </h1>
    <p class="my-filler">
      <%= @piece.description %>
    </p>
  </div>
</div>
