<style>
.carousel-inner > .item > img,
.carousel-inner > .item > a > img {
    height: 400px;
    margin: auto;
}
</style>
<div class = "my-content">
    <h2 class = "my-headTitle" style = "width = 100%;">
      <%= @portpage.title %>
      <hr>
    </h2>
    <p style="float: right; margin-right: 20px;"> <%= @portpage.datee %> </p>
    <div class="my-stuff">
        <div class="container">
        <br>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <% acounter = 0 %>
          <ol class="carousel-indicators">
            <% @images.each do |ii| %>
            <% if acounter == 0 %>
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <% else %>
            <li data-target="#myCarousel" data-slide-to=<%= acounter.to_s %>></li>
            <% end %>
            <% acounter = acounter + 1 %>
            <% end %>
          </ol>
          <% counter = 0 %>
          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <% @images.each do |i| %>
            <% if counter == 1 %>
              <div class="item active">
            <% else %>
              <div class="item">
            <% end %>
                <img src= <%= i.imageLink %>>
              </div>
            <% counter = counter + 1 %>
            <% end %>
          </div>

          <!-- Left and right controls -->
          <a #id="transs" class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
           <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
           <span class="sr-only">Previous</span>
         </a>
         <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
           <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
           <span class="sr-only">Next</span>
         </a>
        </div>
      </div>
    </div>
    <div style= "width: 900px; margin-left: auto; margin-right:auto">
      <a href= <%= @portpage.tryLink %> > <p class="my-mainBut" id="portpageBut"> Try/Download </p> </a>
      <a href  = <%= @portpage.gitHubLink %>>  <p class="my-mainBut" id="portpageBut"> Github </p> </a>
      </div>
      <br>
    <div style= "width: 80%; margin-left: auto; margin-right:auto">
      <h1>
        Description:
      </h1>
      <p class="my-filler">
        <%= @portpage.description %>
      </p>
      <h1>
        What's Cool?
      </h1>
      <p class="my-filler">
        <%= @portpage.cool %>
      </p>
      <h1>
        How I made it:
      </h1>
      <p class="my-filler">
        <%= @portpage.made %>
      </p>
      <h1>
        Contributors
      </h1>
      <p class="my-filler">
        <%= @portpage.contributors %>
      </p>
    </div>
    <br>
  </div>
  <div id = "my-space">   </div>
  <div id = "my-space">   </div>
